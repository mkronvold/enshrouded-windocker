# ==============================================================
# Enshrouded Dedicated Server - Configuration Template
# ==============================================================
# Copy this file to .env and fill in your values:
#   Copy-Item .env.example .env
#
# All changes take effect on the next container start
# (no image rebuild needed - just: docker compose up -d --force-recreate)
# ==============================================================


# --------------------------------------------------------------
# Server
# --------------------------------------------------------------

# Container timezone (tz database name)
# Examples: America/New_York, America/Los_Angeles, Europe/London, Asia/Tokyo
TZ=America/Chicago

# Server name shown in the in-game browser
NAME=My Enshrouded Server

# Game port (UDP + TCP) - must match the ports: section in docker-compose.yml
GAME_PORT=15636

# Query/Steam port (UDP + TCP) - must match the ports: section in docker-compose.yml
QUERY_PORT=15637

# Max players: 1-16
SLOT_COUNT=16

# Run a SteamCMD update check on every container start.
# Set to false after the first install to speed up startup.
# The AUTO_UPDATE schedule below will still apply regardless.
# Values: true | false
UPDATE_ON_START=true

# Discord webhook URL for server notifications (start, stop, update).
# Leave blank to disable.
WEBHOOK_URL=

# Automatically update and restart on a cron schedule
# Values: true | false
AUTO_UPDATE=true
# Cron format: "MIN HOUR * * *"  (default: 3:00 AM daily)
AUTO_UPDATE_SCHEDULE=0 3 * * *

# Restart the server on a cron schedule (independent of updates)
# Values: true | false
SCHEDULED_RESTART=true
# Cron format: "MIN HOUR * * *"  (default: 4:00 AM daily)
SCHEDULED_RESTART_SCHEDULE=0 4 * * *


# --------------------------------------------------------------
# Chat
# --------------------------------------------------------------

# Enable in-game text chat
# Values: true | false
ENABLE_TEXT_CHAT=true

# Enable in-game voice chat
# Values: true | false
ENABLE_VOICE_CHAT=false

# Voice chat mode
# Values: Proximity | Global
VOICE_CHAT_MODE=Proximity


# --------------------------------------------------------------
# Player
# --------------------------------------------------------------

# Multipliers: any positive float (1.0 = default, 2.0 = double, 0.5 = half)
PLAYER_HEALTH_FACTOR=1.0
PLAYER_MANA_FACTOR=1.0
PLAYER_STAMINA_FACTOR=1.0
PLAYER_BODY_HEAT_FACTOR=1.0
PLAYER_DIVING_TIME_FACTOR=1.0

# Whether equipment loses durability over time
# Values: true | false
ENABLE_DURABILITY=true

# Whether players receive a debuff when starving
# Values: true | false
ENABLE_STARVING_DEBUFF=false

# Multiplier for how long food buffs last
FOOD_BUFF_DURATION_FACTOR=1.0

# Time before hunger becomes starvation (nanoseconds)
# 600000000000 = 10 minutes | 1200000000000 = 20 minutes
FROM_HUNGER_TO_STARVING=600000000000


# --------------------------------------------------------------
# World
# --------------------------------------------------------------

# How quickly the shroud debuff accumulates (higher = faster)
SHROUD_TIME_FACTOR=1.0

# What is dropped on death
# Values: AddBackpackMaterials | Everything | NoItems
TOMBSTONE_MODE=AddBackpackMaterials

# Wind turbulence while gliding
# Values: true | false
ENABLE_GLIDER_TURBULENCES=true

# How often weather events occur
# Values: Rare | Normal | Often
WEATHER_FREQUENCY=Normal

# Fishing minigame difficulty
# Values: Easy | Normal | Hard
FISHING_DIFFICULTY=Normal

# Intensity of shroud curse effects
# Values: None | Normal | Hard
CURSE_MODIFIER=Normal

# Day length (nanoseconds): 1800000000000 = 30 min | 3600000000000 = 1 hour
DAY_TIME_DURATION=1800000000000

# Night length (nanoseconds): 720000000000 = 12 min | 1800000000000 = 30 min
NIGHT_TIME_DURATION=720000000000


# --------------------------------------------------------------
# Economy & Progression
# --------------------------------------------------------------

# Multipliers: any positive float (1.0 = default)
MINING_DAMAGE_FACTOR=1.0
PLANT_GROWTH_SPEED_FACTOR=1.0
RESOURCE_DROP_STACK_AMOUNT_FACTOR=1.0
FACTORY_PRODUCTION_SPEED_FACTOR=1.0

# Fraction of skill points returned when respeccing (0.0 - 1.0)
# 1.0 = full refund | 0.5 = half | 0.0 = nothing
PERK_UPGRADE_RECYCLING_FACTOR=0.5

PERK_COST_FACTOR=1.0
EXPERIENCE_COMBAT_FACTOR=1.0
EXPERIENCE_MINING_FACTOR=1.0
EXPERIENCE_EXPLORATION_QUESTS_FACTOR=1.0


# --------------------------------------------------------------
# Enemies
# --------------------------------------------------------------

# Overall enemy density
# Values: Few | Normal | Many | Extreme
RANDOM_SPAWNER_AMOUNT=Normal

# How many enemies can be simultaneously aggro'd
# Values: Few | Normal | Many | Extreme
AGGRO_POOL_AMOUNT=Normal

# Multipliers: any positive float (1.0 = default)
ENEMY_DAMAGE_FACTOR=1.0
ENEMY_HEALTH_FACTOR=1.0
ENEMY_STAMINA_FACTOR=1.0
ENEMY_PERCEPTION_RANGE_FACTOR=1.0
BOSS_DAMAGE_FACTOR=1.0
BOSS_HEALTH_FACTOR=1.0
THREAT_BONUS=1.0

# Make all enemies passive (ignores the player)
# Values: true | false
PACIFY_ALL_ENEMIES=false

# What happens when a taming attempt is interrupted
# Values: LoseSomeProgress | LoseAllProgress | Nothing
TAMING_STARTLE_REPERUSSION=LoseSomeProgress


# --------------------------------------------------------------
# User Group Passwords  (keep these secret - never commit .env)
# --------------------------------------------------------------
# Default: password required to connect at all.
# Leave blank to allow anyone to join without a password.
SET_GROUP_DEFAULT_PASSWORD=changeme

# Enter the corresponding password in-game to receive that role.
# Leave blank to disable a role.
SET_GROUP_VISITOR_PASSWORD=changeme
SET_GROUP_HELPER_PASSWORD=changeme
SET_GROUP_FRIEND_PASSWORD=changeme
SET_GROUP_ADMIN_PASSWORD=changeme


# --------------------------------------------------------------
# User Group Permissions
# --------------------------------------------------------------
# Can this role kick/ban other players?
# Values: true | false
SET_GROUP_VISITOR_CAN_KICK_BAN=true
SET_GROUP_HELPER_CAN_KICK_BAN=true
SET_GROUP_FRIEND_CAN_KICK_BAN=true
SET_GROUP_ADMIN_CAN_KICK_BAN=true

# Can this role open other players' inventories?
# Values: true | false
SET_GROUP_VISITOR_CAN_ACCESS_INVENTORIES=true
SET_GROUP_HELPER_CAN_ACCESS_INVENTORIES=true
SET_GROUP_FRIEND_CAN_ACCESS_INVENTORIES=true
SET_GROUP_ADMIN_CAN_ACCESS_INVENTORIES=true
